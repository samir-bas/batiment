{% extends 'base.html.twig' %}

{% block title %}Liste des Projets{% endblock %}

{% block body %}
     <div class="container">
        <h4>Vos Projets <a href="{{ path('project_new') }}" class="btn btn-success"> 
            <i class="fas fa-plus-circle"></i> Ajouter un Projet</a>
        </h4>
        <table class="table class=table table-striped table-hover table-bordered mt-3">
            <thead class="text-center align-middle"> <!--Aligne middle : vertical center on the cell -->
                <tr>
                    <th scope="col" class="col-1">ID</th>
                    <th scope="col" class="col-1">Nom</th>
                    <th scope="col" class="col-3">Description</th>
                    <th scope="col" class="col-1">Date Début</th>
                    <th scope="col" class="col-1">Date Fin</th>
                    <th scope="col" class="col-3">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for project in projects %}
                    <tr>
                        <td>{{ project.id }}</td>
                        <td>{{ project.name }}</td>
                        <td>{{ project.description }}</td>
                        <td>{{ project.begindate|date('d/m/Y') }}</td>
                        <td>{{ project.enddate|date('d/m/Y') }}</td>
                       <td class="text-center">
                            <a href="{{ path('project_edit', {'id': project.id}) }}" 
                                class ="btn btn-primary col-3"> <i  class="fas fa-edit"></i> Modifier</a>
                            <a href="{{ path('project_edit', {'id': project.id}) }}"
                                class ="btn btn-danger col-3"> <i  class="fas fa-archive"></i> Archiver</a>
                            <a href="{{ path('task_index', {'id': project.id}) }}"
                                class ="btn btn-primary col-3"> <i  class="fas fa-tasks"></i> Tâches</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}
