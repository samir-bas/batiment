{% extends 'base.html.twig' %}

{% block title %}Liste des Tâches{% endblock %}

{% block body %}
     <div class="container">
        <p class="h4 py-2">
            Projet : {{ project.id }} <br>
            {{ project.description }}
        </p>
        <h4>Les Tâches <a href="{{ path('task_new', {'id': project.id}) }}" class="btn btn-success"> 
            <i class="fas fa-plus-circle"></i> Ajouter une Tâche</a>
            <a href="{{ path('project_index') }}" class="btn btn-primary"> 
            <i class="fas fa-arrow-left"></i> Retour</a>
        </h4>
   
        <table class="table class=table table-striped table-hover table-bordered mt-3">
            <thead class="text-center align-middle"> <!--Aligne middle : vertical center on the cell -->
                <tr>
                    <th scope="col" class="col-1">ID</th>
                    <th scope="col" class="col-1">Nom</th>
                    <th scope="col" class="col-3">Description</th>
                    <th scope="col" class="col-1">Date Début</th>
                    <th scope="col" class="col-1">Date Fin</th>
                    <th scope="col" class="col-3">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for task in tasks %}
                    <tr>
                        <td>{{ task.id }}</td>
                        <td>{{ task.name }}</td>
                        <td>{{ task.description }}</td>
                        <td>{{ task.begindate|date('d/m/Y') }}</td>
                        <td>{{ task.enddate|date('d/m/Y') }}</td>
                       <td class="text-center">
                            <a href="{{ path('task_edit', {'id': task.id}) }}" 
                                class ="btn btn-primary col-3"> <i  class="fas fa-edit"></i> Modifier</a>
                            <a href="{{ path('task_index', {'id': task.id}) }}"
                                class ="btn btn-danger col-3"> <i  class="fas fa-trash"></i> Supprimer</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}
